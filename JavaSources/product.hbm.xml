<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.simplilearn.model.Product" table="products">
		<id name="productId" column="product_id">
			<generator class="increment"></generator>
		</id>
		<property name="productName" type="string" column="product_name" />
		<property name="quantityInStock" type="long" column="quantity_in_stock" />
		<property name="unitPrice" type="long" column="unit_price" />
	</class>
</hibernate-mapping>